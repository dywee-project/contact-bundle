{# Dywee\ContactBundle\Resources\View\Message\add.html.twig #}

{% extends '@DyweeContactBundle/layout.html.twig' %}

{% block title %}
    Contactez-nous {{ parent() }}
{% endblock %}

{% block bodyContent %}
    {% if form is defined %}

    {{ form_start(form, {attr:{class: "form-horizontal"}}) }}

    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.firstName, "Prénom", {label_attr:{class:"col-sm-2 label-control"}}) }}
        {{ form_errors(form.firstName) }}
        <div class="col-sm-6">
            {{ form_widget(form.firstName, {attr:{class:"form-control"}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.lastName, "Nom", {label_attr:{class:"col-sm-2 label-control"}}) }}
        {{ form_errors(form.lastName) }}
        <div class="col-sm-6">
            {{ form_widget(form.lastName, {attr:{class:"form-control"}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.email, "Email", {label_attr:{class:"col-sm-2 label-control"}}) }}
        {{ form_errors(form.email) }}
        <div class="col-sm-6">
            {{ form_widget(form.email, {attr:{class:"form-control"}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.phone, "Téléphone", {label_attr:{class:"col-sm-2 label-control"}}) }}
        {{ form_errors(form.phone) }}
        <div class="col-sm-6">
            {{ form_widget(form.phone, {attr:{class:"form-control"}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.message, "Votre message", {label_attr:{class:"col-sm-2 label-control"}}) }}
        {{ form_errors(form.message) }}
        <div class="col-sm-6">
            {{ form_widget(form.message, {attr:{"class":"form-control", "rows":"10"}}) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-6">
            {{ form_widget(form.submit, {attr:{"class":"btn btn-success btn-block"}, "label": "Envoyer"}) }}
        </div>
    </div>

    {{ form_rest(form) }}

    {{ form_end(form) }}

{% endif %}
{% endblock %}
